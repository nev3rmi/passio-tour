# =============================================================================
# Passio Tour Management System - Environment Configuration
# =============================================================================
# 
# Copy this file to .env and update the values according to your environment.
# Never commit the actual .env file to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# APPLICATION SETTINGS
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION (PostgreSQL 15)
# -----------------------------------------------------------------------------
# Database connection settings
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=passio_tour
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_secure_password_here

# Database connection pool settings
DATABASE_POOL_MAX=20
DATABASE_IDLE_TIMEOUT=30000
DATABASE_CONNECTION_TIMEOUT=2000

# Database SSL (set to true in production)
DATABASE_SSL=false

# -----------------------------------------------------------------------------
# REDIS CONFIGURATION
# -----------------------------------------------------------------------------
# Redis connection settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=passio_tour:

# Redis connection timeout
REDIS_TIMEOUT=5000

# -----------------------------------------------------------------------------
# AUTHENTICATION & SECURITY
# -----------------------------------------------------------------------------
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-in-production-minimum-32-characters

# Password hashing
BCRYPT_ROUNDS=12

# -----------------------------------------------------------------------------
# FILE UPLOAD CONFIGURATION
# -----------------------------------------------------------------------------
# File upload limits and settings
MAX_FILE_SIZE=10485760
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/webp,image/gif
UPLOAD_PATH=./uploads

# -----------------------------------------------------------------------------
# PAYMENT GATEWAYS
# -----------------------------------------------------------------------------

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_MODE=sandbox
# Set to 'live' for production

# -----------------------------------------------------------------------------
# EMAIL SERVICES
# -----------------------------------------------------------------------------

# Email Provider (sendgrid, aws-ses, smtp)
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=your_email_service_api_key_here

# Email settings
EMAIL_FROM=noreply@passio-tour.com
EMAIL_FROM_NAME=Passio Tour
EMAIL_REPLY_TO=support@passio-tour.com

# SMTP Configuration (if using SMTP provider)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_SECURE=false

# -----------------------------------------------------------------------------
# AWS CONFIGURATION
# -----------------------------------------------------------------------------
# AWS S3 for file storage
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=passio-tour-uploads

# AWS CloudFront (optional, for CDN)
CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net
CLOUDFRONT_KEY_PAIR_ID=your_cloudfront_key_pair_id
CLOUDFRONT_PRIVATE_KEY_PATH=./keys/cloudfront-private-key.pem

# -----------------------------------------------------------------------------
# EXTERNAL API KEYS
# -----------------------------------------------------------------------------

# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Twilio (for SMS notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid (for email)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@passio-tour.com

# -----------------------------------------------------------------------------
# RATE LIMITING
# -----------------------------------------------------------------------------
# Rate limiting settings
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000
RATE_LIMIT_SKIP_FAILED_REQUESTS=false
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# -----------------------------------------------------------------------------
# LOGGING CONFIGURATION
# -----------------------------------------------------------------------------
# Logging settings
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_FILES=5
LOG_MAX_SIZE=20m
LOG_DATE_PATTERN=YYYY-MM-DD

# Enable/disable specific log types
LOG_REQUEST_ENABLED=true
LOG_ERROR_ENABLED=true
LOG_PERFORMANCE_ENABLED=false
LOG_SECURITY_ENABLED=true

# -----------------------------------------------------------------------------
# CORS & SECURITY
# -----------------------------------------------------------------------------
# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com

# Security headers
HELMET_ENABLED=true
COMPRESSION_ENABLED=true
CORS_ENABLED=true

# Content Security Policy
CSP_ENABLED=false
CSP_REPORT_URI=https://your-csp-report-endpoint.com/csp

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
# Enable/disable features
ENABLE_WEBSOCKETS=true
ENABLE_STRIPE=false
ENABLE_PAYPAL=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_S3_UPLOAD=false
ENABLE_CLOUD_FRONT=false
ENABLE_TWILIO_SMS=false
ENABLE_GOOGLE_MAPS=false
ENABLE_ANALYTICS=false
ENABLE_MAINTENANCE_MODE=false

# -----------------------------------------------------------------------------
# DEVELOPMENT SETTINGS
# -----------------------------------------------------------------------------
# Development-specific settings
DEBUG=passio:tour:*
VERBOSE_LOGGING=false
MOCK_EXTERNAL_SERVICES=false

# Database seeding
SEED_DATABASE=false
SEED_ADMIN_EMAIL=admin@passio-tour.com
SEED_ADMIN_PASSWORD=admin123456

# -----------------------------------------------------------------------------
# TESTING CONFIGURATION
# -----------------------------------------------------------------------------
# Test database settings
TEST_DATABASE_HOST=localhost
TEST_DATABASE_PORT=5432
TEST_DATABASE_NAME=passio_tour_test
TEST_DATABASE_USERNAME=postgres
TEST_DATABASE_PASSWORD=test_password

# Test Redis settings
TEST_REDIS_HOST=localhost
TEST_REDIS_PORT=6379
TEST_REDIS_DB=1

# -----------------------------------------------------------------------------
# MONITORING & ANALYTICS
# -----------------------------------------------------------------------------

# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# DataDog APM
DATADOG_API_KEY=your_datadog_api_key
DATADOG_SERVICE_NAME=passio-tour-api
DATADOG_ENV=development

# New Relic
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
NEW_RELIC_APP_NAME=Passio Tour API

# -----------------------------------------------------------------------------
# DEPLOYMENT SETTINGS
# -----------------------------------------------------------------------------

# Docker settings
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_TAG=latest

# Kubernetes settings
KUBERNETES_NAMESPACE=passio-tour
KUBERNETES_SERVICE_ACCOUNT=passio-tour-sa

# Load Balancer
LOAD_BALANCER_URL=https://api.passio-tour.com

# Health check endpoints
HEALTH_CHECK_PATH=/health
READINESS_CHECK_PATH=/ready

# -----------------------------------------------------------------------------
# BACKUP & MAINTENANCE
# -----------------------------------------------------------------------------

# Database backup settings
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=passio-tour-backups

# Cache settings
CACHE_TTL=3600
CACHE_MAX_KEYS=1000

# -----------------------------------------------------------------------------
# ADVANCED SETTINGS
# -----------------------------------------------------------------------------

# WebSocket settings
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000
WS_MAX_MESSAGE_SIZE=1048576

# Background job settings
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_CONCURRENCY=5
QUEUE_MAX_ATTEMPTS=3

# Metrics settings
METRICS_ENABLED=false
METRICS_PORT=9090
METRICS_PATH=/metrics

# API Documentation
DOCS_ENABLED=true
DOCS_PATH=/docs
DOCS_USERNAME=admin
DOCS_PASSWORD=secure_docs_password

# -----------------------------------------------------------------------------
# NOTES
# -----------------------------------------------------------------------------
# 
# SECURITY REMINDERS:
# - Never commit .env files to version control
# - Use strong, unique secrets for JWT and session keys (minimum 32 characters)
# - Rotate secrets regularly
# - Use different database credentials for development, staging, and production
# - Enable SSL/TLS for all external connections in production
# 
# PRODUCTION CHECKLIST:
# - Set NODE_ENV=production
# - Update all test/demo API keys with production keys
# - Enable SSL/TLS certificates
# - Configure proper CORS origins
# - Enable security headers and CSP
# - Set up monitoring and error tracking
# - Configure backup and disaster recovery
# - Set up proper logging and log rotation
# - Enable rate limiting and DDoS protection
# - Use a proper secrets management service (e.g., AWS Secrets Manager, Azure Key Vault)
# 
# DEPLOYMENT:
# - Use environment-specific .env files (.env.development, .env.staging, .env.production)
# - Consider using a secrets management service in production
# - Set up CI/CD pipelines to handle environment-specific deployments
# - Use infrastructure as code (Terraform, CloudFormation) for consistent deployments