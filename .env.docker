# Docker-specific environment variables
# These override or complement the main .env file

# Override database and Redis for Docker
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=passio_tour
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres123

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Service URLs for Docker environment
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# MinIO (S3-compatible storage) for Docker
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=passio-tour-uploads

# Mailhog for email testing
SMTP_HOST=mailhog
SMTP_PORT=1025
EMAIL_FROM=noreply@passio-tour.local

# Enable features for development
ENABLE_S3_UPLOAD=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_WEBSOCKETS=true
ENABLE_MINIO=true

# Development settings
NODE_ENV=development
LOG_LEVEL=debug
DEBUG=passio:tour:*
MOCK_EXTERNAL_SERVICES=false

# Health check URLs
HEALTH_CHECK_PATH=/health
DATABASE_HEALTH_PATH=/health/db
REDIS_HEALTH_PATH=/health/redis

# Docker service names (internal networking)
POSTGRES_SERVICE=postgres
REDIS_SERVICE=redis
MINIO_SERVICE=minio
MAILHOG_SERVICE=mailhog
ADMINER_SERVICE=adminer
REDIS_COMMANDER_SERVICE=redis-commander