# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database Configuration (PostgreSQL 15)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=passio_tour
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_database_password
DATABASE_POOL_MAX=20
DATABASE_IDLE_TIMEOUT=30000
DATABASE_CONNECTION_TIMEOUT=2000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=passio_tour:

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d
SESSION_SECRET=your-super-secret-session-key-change-in-production-min-32-chars
BCRYPT_ROUNDS=12

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/webp
UPLOAD_PATH=./uploads

# Stripe Payment Integration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# PayPal Payment Integration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# Email Service (SendGrid/AWS SES)
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=your_email_api_key
EMAIL_FROM=noreply@passio-tour.com
EMAIL_FROM_NAME=Passio Tour

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=passio-tour-uploads

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_FILES=5
LOG_MAX_SIZE=20m

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Security Features
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# Feature Flags
ENABLE_WEBSOCKETS=true
ENABLE_STRIPE=false
ENABLE_PAYPAL=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_S3_UPLOAD=false